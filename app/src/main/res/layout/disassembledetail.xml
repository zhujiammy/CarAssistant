                        android:textColor="@color/textcolor_t"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/registerTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="46546545645645646546"
