<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/gray"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.appbar.AppBarLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ToolbarTheme1"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <androidx.appcompat.widget.Toolbar
            android:layout_marginTop="15dp"
            android:id="@+id/toolbar"
            app:elevation="0dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white"
            >
            <TextView
                android:layout_marginTop="10dp"
                android:text="车辆预处理"
                android:id="@+id/toolbar_title"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                />

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center"
            android:layout_margin="10dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/grey_700"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="车品牌:"
                    />
                <TextView
                    android:padding="3dp"
                    android:textSize="15sp"
                    android:id="@+id/carInfo"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="京A32323"
                    />


            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/grey_700"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="编号:"
                    />
                <TextView
                    android:textSize="15sp"
                    android:id="@+id/carCode"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2323"
                    />


            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/grey_700"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="入场时间:"
                    />
                <TextView
                    android:textSize="15sp"
                    android:id="@+id/erterTime"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2323"
                    />



            </LinearLayout>
            <LinearLayout
                android:id="@+id/plateNumberNo_lin"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/grey_700"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="车牌号:"
                    />
                <TextView
                    android:padding="3dp"
                    android:background="@color/blue"
                    android:textSize="15sp"
                    android:id="@+id/plateNumberNo"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="京A32323"
                    />


            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/line4"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <TextView
                        android:textSize="15sp"
                        android:textColor="@color/grey_700"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="主机厂编号:"
                        />
                    <TextView
                        android:textSize="15sp"
                        android:id="@+id/testMainEnginePlantsNum"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2323"
                        />


                </LinearLayout>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <TextView
                        android:textSize="15sp"
                        android:textColor="@color/grey_700"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="试验车状态:"
                        />
                    <TextView
                        android:textSize="15sp"
                        android:id="@+id/testState"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2323"
                        />


                </LinearLayout>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <TextView
                        android:textSize="15sp"
                        android:textColor="@color/grey_700"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="主机厂:"
                        />
                    <TextView
                        android:textSize="15sp"
                        android:id="@+id/testMainEnginePlants"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2323"
                        />


                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/gray"
                />

            <TextView
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="点击图片开始拍照"
                />

            <LinearLayout
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/iv_1"
                            android:src="@drawable/imgdef"
                            android:layout_margin="5dp"
                            android:layout_width="100dp"
                            android:layout_height="80dp"
                            />
                        <TextView
                            android:textColor="@color/textcolor_t"
                            android:textSize="15sp"
                            android:text="左前45度"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/iv_2"
                            android:src="@drawable/imgdef"
                            android:layout_margin="5dp"
                            android:layout_width="100dp"
                            android:layout_height="80dp"
                            />
                        <TextView
                            android:textColor="@color/textcolor_t"
                            android:textSize="15sp"
                            android:text="右后45度"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/iv_3"
                            android:src="@drawable/imgdef"
                            android:layout_margin="5dp"
                            android:layout_width="100dp"
                            android:layout_height="80dp"
                            />
                        <TextView
                            android:id="@+id/t3"
                            android:textColor="@color/textcolor_t"
                            android:textSize="15sp"
                            android:text="车架号"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/iv_4"
                            android:src="@drawable/imgdef"
                            android:layout_margin="5dp"
                            android:layout_width="100dp"
                            android:layout_height="80dp"
                            />
                        <TextView
                            android:id="@+id/t4"
                            android:textColor="@color/textcolor_t"
                            android:textSize="15sp"
                            android:text="检字"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/iv_5"
                            android:src="@drawable/imgdef"
                            android:layout_margin="5dp"
                            android:layout_width="100dp"
                            android:layout_height="80dp"
                            />
                        <TextView
                            android:id="@+id/t5"
                            android:textColor="@color/textcolor_t"
                            android:textSize="15sp"
                            android:text="车辆铭牌"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/iv_6"
                            android:src="@drawable/imgdef"
                            android:layout_margin="5dp"
                            android:layout_width="100dp"
                            android:layout_height="80dp"
                            />
                        <TextView
                            android:id="@+id/t6"
                            android:textColor="@color/textcolor_t"
                            android:textSize="15sp"
                            android:text="发动机号"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>




            <LinearLayout
                android:gravity="center"
                android:layout_margin="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <Button
                    android:id="@+id/staging_btn"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:text="暂存"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/login_btn_backgroud_unfocus"
                    />
                <Button
                    android:id="@+id/ok_btn"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:text="预处理完成"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/login_btn_backgroud_unfocus"
                    />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
